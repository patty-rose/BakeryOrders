@{
  Layout = "_Layout";
} 
@using BakeryOrders.Models;
<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <p>No vendors have been added yet!</p>
  <p><a class="footer" href='/vendors/new'>Add a new vendor</a></p>
} 

@foreach (Vendor vendor in Model)
{
  <p><a href='/vendors/@vendor.Id'>@vendor.Name</a></p>
}