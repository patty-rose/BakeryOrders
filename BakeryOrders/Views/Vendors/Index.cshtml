@{
  Layout = "_Layout";
} 
@using BakeryOrders.Models;
<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
  <h3><a class="footer" href='/vendors/new'>Add a new vendor</a></h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}