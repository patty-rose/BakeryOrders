@{
  Layout = "_Layout";
} 
<h1>Order Details: </h1>

<h2>@Model["order"].Title</h2>
<p>Vendor: @Model["vendor"].Name</p>
<p>Order Date: @Model["order"].Date</p>
<p>Order Total: $@Model["order"].Price</p>
<p>Order Comments/Notes: @Model["order"].Description</p>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
